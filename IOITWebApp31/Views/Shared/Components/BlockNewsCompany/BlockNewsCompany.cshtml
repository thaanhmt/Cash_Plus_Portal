@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="news-dn col-xs-6 col-md-3">
            <div class="img-dn">
                <a href="/@(Const.DETAIL_NEWS + "/" + item.Url + "-" + Const.WEBSITEID + "-" + item.NewsId + ".html")" title="@item.Title">
                    <img src="/@(Const.ROOT_THUMBS + "/_thumb299/" + item.Image)" style="width:100%; height:184px;"  class="img-responsive" alt="@item.Title">
                </a>
            </div>
            <div class="title-dn">
                <a href="/@(Const.DETAIL_NEWS + "/" + item.Url + "-" + Const.WEBSITEID + "-" + item.NewsId + ".html")" title="@item.Title">
                    @(item.Title.Length > 75 ? item.Title.Substring(0, item.Title.Substring(0, 75).LastIndexOf(' ')) + "..." : item.Title)
                </a>
            </div>
            <div class="text-dn">
                @(item.Description.Length > 150 ? item.Description.Substring(0, item.Description.Substring(0, 150).LastIndexOf(' ')) + "..." : item.Description)
            </div>
        </div>
    }
        <div class="more-dn">
            <a href="/@(Const.CATEGORY_NEWS + "/" + ViewBag.CategoryUrl + "-" + Const.WEBSITEID + "-" + ViewBag.CategoryId + "-1.html")" title="@ViewBag.CategoryName">
                Xem thêm >>
            </a>
        </div>
}