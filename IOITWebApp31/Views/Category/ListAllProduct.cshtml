    <div class="child-page">
        <div class="banner-page">
            <img src="/images/banner-prd.jpg" class="img-responsive" alt="">
            <div class="breadcrumb container">
                <p>@Startup._lang["SANPHAM"]</p>
                <ul>
                    <li><a href="/">@Startup._lang["Home"]</a></li>
                    <li><span>@Startup._lang["SANPHAM"]</span></li>
                </ul>
            </div>
        </div>
        <!-- End Slide home -->
        <div class="container">
            <div class="row">
                <div class="list-prd list-all-prd" style="margin-top:0px">
                    @foreach (var item in Model)
                    {
                        <div class="prd col-xs-6 col-md-3">
                            <div class="box-prd">
                                <div class="img-prd">
                                    <a href="@("/" + item.Url)" title="@item.Name">
                                        <img src="/uploads/@item.Image" class="img-responsive" alt="">
                                    </a>
                                </div>
                                <div class="title-prd"><a href="@("/" + item.Url)" title="@item.Name">@item.Name</a></div>
                                <div class="text-prd">@Html.Raw(item.Description)</div>
                                <div class="detail-prd">
                                    <a href="@("/" + item.Url)" title="@item.Name">@Startup._lang["XEMCHITIET"] >></a></div>
                            </div>
                        </div>
                    }
                    <div class="pagenum col-xs-12">
                        @if (int.Parse(ViewBag.total.ToString()) >= int.Parse(ViewBag.np.ToString()))
                        {
                            <ul>
                                <li><span>@Startup._lang["Page"]</span></li>
                                @if ((int)ViewBag.Pre <= 0)
                                {
                                }
                                else
                                {
                                    <li><a href='@("/all-product?p=" + ViewBag.Pre)'><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></li>
                                }

                                @for (int i = 1; i <= (int.Parse(ViewBag.total.ToString()) / int.Parse(ViewBag.np.ToString())) + 1; i++)
                                {
                                    if (ViewBag.Page == i)
                                    {
                                        <li class="active"><a href='@("/all-product?p=" + i)'>@i</a></li>
                                    }
                                    else
                                    {
                                        <li><a href='@("/all-product?p=" + i)'>@i</a></li>
                                    }
                                }

                                @if ((int)ViewBag.Next > (int.Parse(ViewBag.total.ToString()) / int.Parse(ViewBag.np.ToString())) + 1)
                                {
                                }
                                else
                                {
                                    <li><a href='@("/all-product?p=" + ViewBag.Next)'><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
