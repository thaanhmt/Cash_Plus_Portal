@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{
    <div class="col col-12">
        <div class="col-inner">
            <div class="col-12 titleBarHome category-title-bar">
                <div class="labelTitleBar">@ViewBag.FirstNameCateWidget</div>
                <div class="read-all-bar"><a href="@(ViewBag.UrlCateWidget)">Xem tất cả</a></div>
            </div>
        </div>
    </div>
    <div class="col col-12 list-news-4">
        @foreach (var item in Model)
        {
            if (item.Image != null){
                <div class="box box-vertical item-news-category-4">
                   @* <div class="box-image"><a href="@("/" + item.Url)" class="d-block"><img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="featured image"></a></div>*@
                    <div class="box-text no-padding-left">
                        <h2 class="heading"><a href="@("/" + item.Url)" class="textLine-3">@item.Title</a></h2>
                        <p class="description textLine-4">@(item.Description.Length > 300 ? item.Description.Substring(0, item.Description.Substring(0, 190).LastIndexOf(' ')) + "..." : item.Description)</p>
                    </div>
                </div>
            }
            else{
                <div class="box box-vertical item-news-category-4">
                    <div class="box-text no-padding-left">
                        <h2 class="heading"><a href="@("/" + item.Url)" class="textLine-3">@item.Title</a></h2>
                        <p class="description textLine-4">@(item.Description.Length > 300 ? item.Description.Substring(0, item.Description.Substring(0, 190).LastIndexOf(' ')) + "..." : item.Description)</p>
                    </div>
                </div>
            }
        }
    </div>
}