@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{
    @foreach (var item in Model)
    {
        if (item.Image != null){
            <div class="col col-lg-4 col-md-4 col-12 col-category-news-2-1">
                <div class="col-inner">
                    <div class="news-category-2">
                        <div class="box item-news-category-2">
                            <div class="box-image"><a href="@("/" + item.Url)" class="d-block"><img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="featured image"></a></div>
                            <div class="box-text">
                                <h2 class="heading"><a href="@("/" + item.Url)" class="textLine-3">@item.Title</a></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }else{
            <div class="col col-lg-4 col-md-4 col-12 col-category-news-2-1">
                <div class="col-inner">
                    <div class="news-category-2">
                        <div class="box item-news-category-2">
                            <div class="box-text">
                                <h2 class="heading"><a href="@("/" + item.Url)" class="textLine-3">@item.Title</a></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}