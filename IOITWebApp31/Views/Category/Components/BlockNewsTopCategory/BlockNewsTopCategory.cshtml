@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{
    @foreach (var item in Model)
    {
        if(item.Image != null){
            <div class="box box-vertical item-news-category-1">
                <div class="box-image"><a href="@("/" + item.Url)" class="d-block"><img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="featured image"></a></div>
                <div class="box-text">
                    <h2 class="heading">
                        <a href="@("/" + item.Url)" class="textLine-3">
                            @item.Title
                        </a>
                    </h2>
                    <p class="description textLine-5">@(item.Description.Length > 300 ? item.Description.Substring(0, item.Description.Substring(0, 190).LastIndexOf(' ')) + "..." : item.Description)</p>
                </div>
            </div>
        }else{
            <div class="box box-vertical item-news-category-1">
                <div class="box-text" style="padding:15px;">
                    <h2 class="heading">
                        <a href="@("/" + item.Url)" class="textLine-3">
                            @item.Title
                        </a>
                    </h2>
                    <p class="description textLine-5">@(item.Description.Length > 300 ? item.Description.Substring(0, item.Description.Substring(0, 190).LastIndexOf(' ')) + "..." : item.Description)</p>
                </div>
            </div>
        }
    }
}