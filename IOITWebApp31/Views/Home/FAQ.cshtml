@{
    ViewBag.Title = "FAQ - Giải đáp câu hỏi thường gặp trong CashPlus";
    Layout = "~/Views/Shared/_LayoutPure.cshtml";
}

<!-- FAQ Search Section -->
<section class="section section-light">
    <div class="faq-wrapper">
        <div class="faq-header-row">
            <h1 class="section-title mb-0">FAQ - Giải đáp câu hỏi thường gặp trong CashPlus</h1>
            <div class="faq-search-wrapper" style="margin-bottom: 0;">
                <div class="input-group">
                    <input type="text" id="faqSearch" class="form-control" placeholder="Tìm kiếm câu hỏi..." />
                    <button id="clearSearch" class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="faq-categories-list">
            @await Html.PartialAsync("_FAQCategory", new { 
                Title = "Câu hỏi dành cho người tiêu dùng",
                CategoryId = "consumer",
                Questions = new[] {
                    new { Id = 1, Question = "Làm thế nào để nhận được hoàn tiền từ CashPlus?", Answer = @"<p>Để nhận được hoàn tiền từ CashPlus, bạn cần thực hiện các bước sau:</p><ol><li><strong>Tải ứng dụng CashPlus</strong> từ Google Play (Android) hoặc App Store (iOS).</li><li><strong>Đăng ký tài khoản</strong> với thông tin cá nhân và liên kết tài khoản ngân hàng.</li><li><strong>Thanh toán hàng hóa/dịch vụ</strong> tại các đối tác (Merchant) của CashPlus.</li></ol><p>Số tiền được hoàn có thể lên đến <strong>30% hóa đơn thanh toán</strong>.</p><ul><li>Nếu số tiền hoàn từ <strong>10.000đ trở lên</strong> sẽ được chuyển ngay vào tài khoản ngân hàng của bạn.</li><li>Nếu dưới <strong>10.000đ</strong> sẽ được quy đổi thành điểm tích lũy. Khi tích lũy đủ <strong>20.000đ</strong> sẽ được đổi thành tiền với tỷ lệ 1:1 và chuyển vào tài khoản đã đăng ký.</li></ul>" },
                    new { Id = 2, Question = "Làm cách nào để biết gần chỗ tôi có điểm bán được hoàn tiền của CashPlus?", Answer = @"<p>Bạn có thể dễ dàng tìm thấy các điểm bán được hoàn tiền thông qua ứng dụng CashPlus.</p><ul><li>Khi mở ứng dụng, ngay tại trang chủ đã tích hợp hệ thống bản đồ thời gian thực hiển thị tất cả địa điểm Merchant với mức chiết khấu cụ thể.</li><li>Đây là điểm khác biệt về công nghệ mà CashPlus đã áp dụng để phục vụ tốt nhất trải nghiệm hoàn tiền của khách hàng.</li></ul>" },
                    new { Id = 3, Question = "Tỷ lệ tiền hoàn có cố định không hay phụ thuộc giá trị đơn hàng?", Answer = @"<p>Với chủ trương khách hàng tiêu dùng càng nhiều qua CashPlus thì số tiền hoàn càng lớn, chúng tôi áp dụng chính sách linh hoạt về chiết khấu thay vì cố định một mức cụ thể.</p><ul><li>Tỷ lệ hoàn tiền có thể thay đổi tùy theo từng đối tác Merchant và chương trình khuyến mãi đặc biệt.</li></ul>" },
                    new { Id = 4, Question = "Khi tải CashPlus về tôi có phải nộp tiền vào ứng dụng để thanh toán không?", Answer = @"<p>Khi sử dụng ứng dụng CashPlus, bạn <strong>không phải đóng bất kỳ khoản phí nào</strong>.</p><ul><li>Bạn chỉ cần liên kết tài khoản ngân hàng hoặc sử dụng tiền mặt để thanh toán cho sản phẩm/dịch vụ khi cần.</li><li>Khoản thanh toán sẽ được trừ trực tiếp vào tài khoản ngân hàng của bạn.</li><li>Ứng dụng CashPlus chỉ tạm thời giữ lại số tiền chưa đủ điều kiện hoàn tiền.</li></ul>" },
                    new { Id = 5, Question = "CashPlus có giới hạn giá trị giao dịch nhỏ nhất để được hoàn tiền không?", Answer = @"<p><strong>Không có giới hạn.</strong></p><ul><li>Khi đăng ký thành công ứng dụng CashPlus, bạn sẽ không bị giới hạn số lượng giao dịch được hoàn tiền trong ngày, miễn là bạn mua sắm hoặc sử dụng dịch vụ tại các điểm là đối tác (Merchant) của CashPlus.</li><li>Dưới <strong>10.000đ</strong> sẽ được quy đổi thành điểm tích lũy, khi số điểm này tích lũy đủ <strong>10.000đ</strong> sẽ được hoàn vào tài khoản ngân hàng đã đăng ký.</li></ul>" },
                    new { Id = 6, Question = "Khi mua hàng xong nhưng sau đó hàng bị lỗi phải đổi trả thì khoản tiền hoàn được xử lý như thế nào?", Answer = @"<p>Việc đổi trả hàng theo chính sách của từng đối tác (Merchant) của CashPlus.</p><ul><li>Hiện tại CashPlus <strong>không hỗ trợ việc hoàn trả số tiền đã hoàn</strong> sau khi đã thanh toán thành công.</li><li>Bạn nên liên hệ trực tiếp với Merchant để được hỗ trợ theo chính sách của họ.</li></ul>" },
                    new { Id = 7, Question = "Khoản tiền được hoàn có phải trừ các khoản thuế/phí không?", Answer = @"<p>CashPlus xây dựng chính sách để người tiêu dùng <strong>không phải chịu bất kỳ khoản thuế/phí nào</strong> với khoản tiền được hoàn khi tiêu dùng thông qua ứng dụng.</p><ul><li>Khi phát sinh (nếu có) thì CashPlus sẽ là đơn vị đứng ra xử lý cho người mua hàng khi tham gia tiêu dùng qua CashPlus theo đúng quy định của pháp luật.</li></ul>" },
                    new { Id = 8, Question = "Mua hàng được hoàn tiền thì có được tham gia các chương trình giảm giá khác của cửa hàng không?", Answer = @"<p>CashPlus sẽ hoàn tiền theo tỷ lệ cam kết của đối tác (Merchant) và phần cam kết này sẽ được duy trì lâu dài.</p><ul><li>Chỉ khi các Merchant có thay đổi và được các bên liên quan chấp nhận mới được thay đổi.</li><li>Những sản phẩm đã đăng ký được chiết khấu thì luôn được hoàn tiền.</li><li>Việc bạn được hưởng thêm chính sách giảm giá khác phụ thuộc vào quyết định của từng điểm bán.</li></ul>" }
                }
            })
            @await Html.PartialAsync("_FAQCategory", new { 
                Title = "Câu hỏi dành cho đối tác dịch vụ/hàng hóa",
                CategoryId = "merchant", 
                Questions = new[] {
                    new { Id = 1, Question = "Cửa hàng nhà tôi là điểm kinh doanh tự phát nhưng có đóng thuế môn bài hàng năm, vậy có được tham gia là đối tác của CashPlus không?", Answer = @"<p>Cửa hàng của bạn <strong>có thể tham gia là đối tác (Merchant) của CashPlus</strong>.</p><ul><li>Bạn cần cung cấp một số giấy tờ như: <strong>Mã số thuế</strong> và <strong>tài khoản ngân hàng</strong> của chủ cửa hàng.</li><li>Sau đó, CashPlus sẽ phối hợp với các bên liên quan xác minh và thông báo lại trong vòng <strong>2 ngày làm việc</strong> sau khi nhận được thông tin.</li><li>Nếu giấy tờ bạn cung cấp đầy đủ và phù hợp thì sẽ được xét duyệt trở thành đối tác của CashPlus.</li><li>Nếu còn thiếu thì bạn vui lòng cung cấp thêm thông tin.</li></ul>" },
                    new { Id = 2, Question = "Khi làm Merchant của CashPlus cửa hàng có phải ký quỹ giao dịch không?", Answer = @"<p><strong>Trên nguyên tắc Merchant sẽ không phải ký quỹ.</strong></p><ul><li>CashPlus thực hiện cả nghiệp vụ hoàn tiền cho khách hàng khi thanh toán bằng tiền mặt, nên các Merchant sẽ phải trả trước khoản tiền chiết khấu cho khách hàng.</li><li>Khoản tiền này được hệ thống thực hiện tính toán chiết khấu cho các bên.</li><li>Khi số tiền trả trước này hết thì hệ thống sẽ không thực hiện được việc hoàn tiền cho khách.</li><li>Nếu khách hàng thanh toán trực tuyến (online) thì Merchant sẽ không phải trả trước bất kỳ khoản nào.</li></ul>" },
                    new { Id = 3, Question = "Tỷ lệ chiết khấu đối với các mặt hàng trong cùng cửa hàng có giống nhau không? Mức thấp nhất là bao nhiêu %?", Answer = @"<p>Tỷ lệ chiết khấu các mặt hàng của một đối tác (Merchant) sẽ khác nhau phụ thuộc vào chính sách bán hàng của từng đơn vị.</p><ul><li>Chủ trương của CashPlus <strong>không cố định mức chiết khấu</strong> của bất kỳ Merchant nào.</li><li>Mức chiết khấu thấp nhất mà CashPlus áp dụng cho các Merchant là <strong>10%</strong>, trong đó hoàn tiền cho khách hàng ít nhất là <strong>4%</strong>, chi phí còn lại dành cho Marketing và nền tảng ứng dụng.</li></ul>" },
                    new { Id = 4, Question = "Hàng tháng/năm Merchant có phải đóng khoản phí thường niên cho CashPlus không?", Answer = @"<p>Khi trở thành đối tác (Merchant) của CashPlus, ngoài việc thanh toán khoản chiết khấu theo cam kết ban đầu thì <strong>không phải đóng bất kỳ khoản phí nào nữa</strong>.</p><ul><li>Để việc hoàn tiền cho khách hàng thanh toán bằng tiền mặt được nhanh chóng và thuận lợi, Merchant cần trả trước cho bên trung gian thanh toán (Bảo Kim) một khoản tiền tùy thuộc vào giá trị giao dịch của từng đối tác.</li></ul>" },
                    new { Id = 5, Question = "Chủ cửa hàng chưa có mã số thuế cá nhân và cửa hàng chưa đăng ký hộ kinh doanh thì có trở thành đối tác của CashPlus được không? (Cá nhân kinh doanh)", Answer = @"<p>Để đảm bảo về mặt pháp lý, <strong>chỉ bắt buộc các doanh nghiệp và hộ kinh doanh cá thể</strong> khi trở thành đối tác (Merchant) của CashPlus phải có mã số thuế cá nhân.</p><ul><li>Hiện nay CashPlus đang cử đại diện để hỗ trợ cá nhân, hộ cá thể làm thủ tục này nhanh nhất.</li></ul>" },
                    new { Id = 6, Question = "Khi làm Merchant của CashPlus, cửa hàng chỉ làm việc với CashPlus hay phải làm việc với bên thứ 3 nữa?", Answer = @"<p>Về nguyên tắc hoạt động để hệ thống vận hành đúng quy định của pháp luật thì CashPlus phải phối hợp với bên thứ 2 để thực hiện một số nghiệp vụ.</p><ul><li>Do là đơn vị chịu trách nhiệm chính về vận hành của CashPlus nên chúng tôi đã chuẩn hóa luồng thông tin để cung cấp cho các bên.</li><li>Trên thực tế các Merchant chỉ làm việc với đại diện kinh doanh của CashPlus là đủ.</li></ul>" },
                    new { Id = 7, Question = "Merchant mở thêm 1 điểm bán nữa làm thế nào để được hưởng chính sách đối tác của CashPlus?", Answer = @"<p>Khi bạn mở thêm một điểm bán thì <strong>hoàn toàn được hưởng những chính sách của CashPlus</strong> dành cho Merchant.</p><ul><li>Về cách thức mở mới như thế nào bạn hãy liên hệ với đại diện của CashPlus để được tư vấn cụ thể.</li></ul>" },
                    new { Id = 8, Question = "CashPlus giúp cửa hàng làm truyền thông như thế nào?", Answer = @"<p>CashPlus hỗ trợ truyền thông cho Merchant bằng các hình thức:</p><ul><li>Tích hợp bản đồ thông minh, cập nhật thông tin chiết khấu của từng đối tác (Merchant) để người tiêu dùng dễ dàng nhận biết.</li><li>Đây là cách truyền thông độc đáo nhất tại Việt Nam hiện tại.</li><li>CashPlus luôn thúc đẩy việc phát triển người dùng (User), đây là những tệp khách hàng mục tiêu của các đối tác.</li><li>Phát triển song song 2 hình thức truyền thông này giúp các Merchant giảm chi phí Marketing nhưng lại thúc đẩy tăng doanh thu.</li></ul>" },
                    new { Id = 9, Question = "Tính cạnh tranh của 2 cửa hàng một là đối tác của CashPlus một không phải là đối tác của CashPlus khác nhau ở điểm nào?", Answer = @"<p>Khi là đối tác (Merchant) của CashPlus với cách Marketing khác biệt bằng bản đồ trên App cũng như các hạ tầng truyền thông thì:</p><ul><li>Khách hàng, nhất là khách hàng mục tiêu tiếp cận đến các sản phẩm dịch vụ sẽ tốt hơn những cửa hàng không phải là đối tác của CashPlus.</li></ul>" }
                }
            })
            @await Html.PartialAsync("_FAQCategory", new { 
                Title = "Câu hỏi chung về CashPlus",
                CategoryId = "general",
                Questions = new[] {
                    new { Id = 1, Question = "Sự khác biệt giữa CashPlus với các ứng dụng hoàn tiền có trên thị trường hiện nay là gì?", Answer = @"<p><strong>CashPlus là một nền tảng công nghệ do ATS Group nghiên cứu và phát triển</strong> để hỗ trợ các đối tượng tham gia trong thị trường bán lẻ.</p><ul><li>Nền tảng này hữu ích trên cả môi trường internet và truyền thống, giúp cả nhóm mua và nhóm bán đều có được lợi ích chính như:</li><li>Người mua hàng được hưởng chiết khấu/tích điểm, quy đổi thành tiền và được hoàn tiền qua hệ thống ngân hàng ngay lập tức.</li><li>Người bán hàng hóa/dịch vụ được CashPlus giới thiệu khách hàng, không phải đầu tư nhưng tăng được lượng khách hàng bền vững, giảm chi phí và rủi ro trong việc quảng bá thương hiệu và tìm kiếm khách hàng.</li><li>CashPlus hỗ trợ và định tuyến người dùng bằng bản đồ, cho người dùng tìm kiếm hàng hóa/dịch vụ trong khu vực kèm theo các thông số cạnh tranh về hàng hóa/dịch vụ để người dùng ra quyết định sử dụng.</li><li>CashPlus cung cấp hệ thống biển bảng tại điểm bán với thông điệp: ""Tiêu thoải mái - Hoàn tiền ngay"" và tại quầy thu ngân: ""Quét QR để được hoàn tiền"".</li><li>CashPlus cung cấp các tiện ích khác giúp cả bên mua và bên bán có thể khai thác nhằm tối ưu nhu cầu và lợi ích của các bên (ví dụ: Hệ thống báo cáo, hệ thống phân quyền, hệ thống đăng tải thông tin và kiểm duyệt, ...).</li><li>CashPlus đáp ứng được tất cả các hình thức thanh toán mà không ảnh hưởng đến trải nghiệm của các bên.</li></ul>" },
                    new { Id = 2, Question = "Cách tải và cài đặt CashPlus như thế nào?", Answer = @"<p>Hiện nay CashPlus đã có mặt trên kho ứng dụng <strong>CHPlay</strong> (Android) và <strong>AppStore</strong> (iOS).</p><ol><li>Vào kho ứng dụng phù hợp với thiết bị, nhập từ khóa ""cashplus"" để tìm và tải ứng dụng ""CashPlus Tiêu dùng & Hoàn tiền"".</li><li>Sau khi tải xuống, điền thông tin cá nhân như họ tên, số điện thoại, email.</li><li>Liên kết tài khoản thanh toán với ngân hàng bạn thường sử dụng.</li></ol><p>Quá trình cài đặt nhanh chóng, chỉ mất khoảng dưới 3 phút, CashPlus sẽ sẵn sàng phục vụ bạn trong việc quản lý tài chính và nhận hoàn tiền mỗi khi mua sắm.</p>" },
                    new { Id = 3, Question = "Làm thế nào để thanh toán được qua CashPlus?", Answer = @"<p>Để thanh toán qua CashPlus có 2 cách:</p><ol><li><strong>Thanh toán online:</strong> Đến các điểm Merchant, cung cấp Mã QR tài khoản CashPlus của bạn (lấy từ ứng dụng CashPlus). Merchant sẽ tạo hóa đơn và mã QR động để thanh toán. Sau đó, mở ứng dụng ngân hàng của bạn và quét mã QR động để hoàn tất thanh toán.</li><li><strong>Thanh toán bằng tiền mặt:</strong> Đến các điểm Merchant, thanh toán bằng tiền mặt. Yêu cầu Merchant cung cấp mã QR hóa đơn qua ứng dụng CashPlus để xác nhận thanh toán. Giao dịch hoàn tất khi cả hai thiết bị nhận được thông báo xác nhận.</li></ol>" },
                    new { Id = 4, Question = "Chức năng giới thiệu người dùng rất hay, vậy tôi phải làm thế nào để giới thiệu được khách hàng sử dụng CashPlus?", Answer = @"<p><strong>Giới thiệu người dùng (Affiliate)</strong> là một tính năng quan trọng của CashPlus và đã được Bộ Công Thương cấp phép.</p><ol><li>Chia sẻ với người khác, họ tải App CashPlus trên App Store hoặc CHPlay.</li><li>Đưa mã giới thiệu (lấy tại phần Tăng điểm tích lũy) để người được giới thiệu quét hoặc nhập mã số.</li><li>Sau khi hoàn tất đăng ký, bạn sẽ hưởng % khi người được giới thiệu mua sắm.</li><li>Bạn có thể theo dõi thu nhập này qua phần Điểm tích lũy trên App.</li></ol>" }
                }
            })
            @await Html.PartialAsync("_FAQCategory", new { 
                Title = "Câu hỏi dành cho tiếp thị liên kết",
