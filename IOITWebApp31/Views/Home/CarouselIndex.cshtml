    }

        .item-carouselindex:nth-child(1), .item-carouselindex:nth-child(2) {
            right: 0; /* Thay đổi left thành right */
            top: 0;
            width: 100%;
            height: 100%;
            transform: none;
            border-radius: 0;
            box-shadow: none;
            opacity: 1;
