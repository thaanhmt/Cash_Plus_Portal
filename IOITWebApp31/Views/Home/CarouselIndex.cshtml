    .content-carouselindex {
        width: min(30vw,400px);
        position: absolute;
        top: 50%;
        left: 3rem;
        transform: translateY(-50%);
        font: 400 0.85rem helvetica,sans-serif;
        color: white;
        text-shadow: 0 3px 8px rgba(0,0,0,0.5);
        opacity: 0;
        display: none;
    }

    .item-carouselindex:nth-of-type(2) .content-carouselindex {
        display: block;
        animation: show 0.75s ease-in-out 0.3s forwards;
    }



    .nav-carouselindex {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 5;
        user-select: none;
    }

        .nav-carouselindex .btn {
            background-color: rgba(255,255,255,0.5);
            color: rgba(0,0,0,0.7);
            border: 2px solid rgba(0,0,0,0.6);
            margin: 0 0.25rem;
            padding: 0.75rem;
            border-radius: 50%;
            cursor: pointer;
        }

            .nav-carouselindex .btn:hover {
                background-color: rgba(255,255,255,0.3);
            }
