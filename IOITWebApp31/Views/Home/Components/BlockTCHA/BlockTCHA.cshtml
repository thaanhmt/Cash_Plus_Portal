@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{

    @foreach (var item in Model)
    {
        <div class="box item-news-7-1-1">
            <div class="box-image">
                <a href="/@item.Url" class="d-block">
                    <img class="image-cover"
                 src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="featured image">
                    <div class="play-video"><img src="@(ViewBag.LinkSite)/images/play-video-7.png" alt="icon play" style="width:40px;height:40px;"></div>
                </a>
            </div>
            <div class="box-text">
                <h2 class="heading-box">
                    <a href="/@item.Url" class="textLine-2">
                        @item.Title
                    </a>
                </h2>
            </div>
        </div>
    }
}