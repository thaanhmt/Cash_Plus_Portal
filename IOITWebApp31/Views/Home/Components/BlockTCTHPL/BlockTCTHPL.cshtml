@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{

    @foreach (var item in Model)
    {
        <div class="box box-vertical item-news-6-2-2 has-hover">
            @if (item.Image != null)
            {
                <div class="box-image">
                    <a href="@("/" + item.Url)" class="d-block">
                        <img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image"
                 alt=" @item.Title">
                    </a>
                </div>
            }
            <div class="box-text no-padding-left">
                <h2 class="heading-box">
                    <a href="@("/" + item.Url)" class="title-text-link textLine-3">
                        @item.Title
                    </a>
                </h2>
                <div class="date_post_core">
                    @(item.DateStartActive.Value.ToString("dd/MM/yyyy"))
                </div>
            </div>
        </div>
