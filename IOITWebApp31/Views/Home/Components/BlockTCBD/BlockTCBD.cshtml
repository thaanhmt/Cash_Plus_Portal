@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{

    @foreach (var item in Model)
    {
        if (item.Image != null)
        {
            <div class="item-carousel-10-2-1 box">
                <div class="box-image">
                    <a href="@("/" + item.Url)" class="d-block">
                        <img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="@item.Title">
                    </a>
                </div>
                <div class="box-text">
                    <h2 class="heading">
                        <a href="@("/" + item.Url)" class="textLine-2">
                            @item.Title
                        </a>
                    </h2>
                    <p class="description textLine-4">
                        @(item.Description.Length > 200 ? item.Description.Substring(0, item.Description.Substring(0, 200).LastIndexOf(' ')) + "..." : item.Description)
                    </p>
                </div>
            </div>
        }else{
            <div class="item-carousel-10-2-1 box">
                <div class="box-text">
                    <h2 class="heading">
                        <a href="@("/" + item.Url)" class="textLine-2">
                            @item.Title
                        </a>
                    </h2>
                    <p class="description textLine-4">
                        @(item.Description.Length > 200 ? item.Description.Substring(0, item.Description.Substring(0, 200).LastIndexOf(' ')) + "..." : item.Description)
                    </p>
                </div>
            </div>
        }
    }
}