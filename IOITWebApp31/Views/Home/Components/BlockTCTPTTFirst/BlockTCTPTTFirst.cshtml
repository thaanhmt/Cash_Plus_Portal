@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{

    @foreach (var item in Model)
    {
        if (item.Image != null)
        {
            <div class="item-news-8-2-1 box">
                <div class="box-image">
                    <a href="@("/" + item.Url)" class="d-block">
                        <img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image"
                 alt="@item.Title">
                    </a>
                </div>
                <div class="box-text">
                    <a href="@("/" + item.Url)" class="d-block heading textLine-2">
                        @item.Title
                    </a>
                </div>
            </div>
        }else{
            <div class="item-news-8-2-1 box">
                <div class="box-text">
                    <a href="@("/" + item.Url)" class="d-block heading textLine-2">
                        @item.Title
                    </a>
                </div>
                <p class="desc-box textLine-5">
                    @(item.Description.Length > 400 ? item.Description.Substring(0, item.Description.Substring(0, 400).LastIndexOf(' ')) + "..." : item.Description)
                </p>
            </div>
        }
    }
}