@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{

    @foreach (var item in Model)
    {
        if(item.Image != null){
            <div class="box-image-hotnews">
                <a href="@(item.Url)" title="@item.Title" class="d-block">
                    <img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="@item.Title">
                </a>
                <h4 class="heading-news">
                    <a href="@(item.Url)"
                       title="@item.Title" class="textLine-2">
                        @item.Title
                    </a>
                </h4>
                <div class="desc-news textLine-3">
                    @(item.Description)
                </div>
            </div>
        }else{
            <div class="box-image-hotnews">
                <h4 class="heading-news">
                    <a href="@(item.Url)"
                       title="@item.Title" class="textLine-2">
                        @item.Title
                    </a>
                </h4>
                <div class="desc-news textLine-3">
                    @(item.Description)
                </div>
            </div>
        }
    }
}