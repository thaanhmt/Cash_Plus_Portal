@model IEnumerable<IOITWebApp31.Models.Data.NewsDTO>
@using IOITWebApp31.Models;

@{
    ViewData["Title"] = "LibraryVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="url-page">
    <div class="container">
        <div class="title-url">@ViewBag.SeoTitle</div>
        <ul>
            <li><a href="/" title="">Trang chủ</a></li>
            <li><span>@ViewBag.SeoTitle</span></li>
        </ul>
    </div>
</div>

<div class="maincontainer">
    <div class="container">
        <div class="row">

            <h1 class="title dk">@ViewBag.SeoTitle</h1>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="video-g col-xs-12 col-sm-6 col-md-4">
                            <iframe width="100%" height="250" src="https://www.youtube.com/embed/@item.LinkVideo" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
                            <div class="title-video-g"><a href="#" title=""><h2>@item.Title</h2></a></div>
                        </div>
                    }
                }
            }

            <div class="pagenum col-xs-12">
                @if (int.Parse(ViewBag.total.ToString()) > 9)
                {
                    <ul>
                        <li><span>Trang</span></li>
                        @if ((int)ViewBag.Pre <= 0)
                        {
                        }
                        else
                        {
                            <li><a href='/@("thu-vien-video-" + ViewBag.Pre + ".html")'><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></li>
                        }

                        @for (int i = 1; i <= (int.Parse(ViewBag.total.ToString()) / 9) + 1; i++)
                        {
                            if (ViewBag.Page == i)
                            {
                                <li class="active"><a href='/@("thu-vien-video-" + i + ".html")'>@i</a></li>
                            }
                            else
                            {
                                <li><a href='/@("thu-vien-video-" + i + ".html")'>@i</a></li>
                            }
                        }

                        @if ((int)ViewBag.Next > (int.Parse(ViewBag.total.ToString()) / 9) + 1)
                        {
                        }
                        else
                        {
                            <li><a href='/@("thu-vien-video-" + (ViewBag.Next) + ".html")' hidden="hidden"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

