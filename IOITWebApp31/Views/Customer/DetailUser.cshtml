                             alt="Ảnh đại diện" style="width: 100%; height: 400px; margin-bottom: 20px;     object-fit: cover; " />
                        <div class="contentI1">
                            <div class="span-detail" style="display: flex">
                                <p>Sinh viên:</p>
                                <p style="margin-left: 5px" ng-bind-html="register.FullName"></p>
                            </div>
                            <div class="span-detail" style="display: flex">
                                <p>Giới tính:</p>
                                <p style="margin-left: 5px" ng-if="register.Sex == 1">Nam</p>
                                <p style="margin-left: 5px" ng-if="register.Sex == 2">Nữ</p>
                                <p style="margin-left: 5px" ng-if="register.Sex == 3">Khác</p>
                            </div>
                            <div class="span-detail" style="display: flex" ng-if="register.SchoolCode !== 3">
                                <p>Trường:</p>
                                <p style="margin-left: 5px" ng-if="register.SchoolCode == 1">Trường cao đẳng du lịch và thương mại Hà Nội</p>
                                <p style="margin-left: 5px" ng-if="register.SchoolCode == 2">Trường cao đẳng công thương Việt Nam</p>
                            </div>
                            <div class="span-detail" style="display: flex" ng-if="register.SchoolCode == 3">
                                <p>Trường:</p>
                                <p style="margin-left: 5px" ng-bind-html="register.Note"></p>
                            </div>
                            <div class="span-detail" style="display: flex">
                                <p>Lớp:</p>
                                <p style="margin-left: 5px" ng-bind-html="register.StudentClass"></p>
                            </div>
                            <div class="span-detail" style="display: flex">
                                <p>Thành tích nổi bật:</p>
                                <p style="margin-left: 5px" ng-bind-html="register.AchievementNote"></p>
                            </div>
                            <div class="span-detail" style="display: flex">
                                <p>Sở thích:</p>
                                <p style="margin-left: 5px" ng-bind-html="register.HobbyNote"></p>
                            </div>
                            <div class="span-detail" style="margin-top: 10px;">
                                <p style="display: flex; max-width: 200px;">
                                    Giới thiệu bản thân:
                                </p>
                                <p style="margin-left: 5px" ng-bind-html="register.PersonSummary"></p>
                            </div>
                            <div class="span-detail" style="margin-top: 10px;">
                                <p style="display: flex; max-width: 200px;">
                                    Trang mạng cá nhân:
                                </p>
                                <div style="width: 50px;" ng-repeat="item in SocialNetworks">
                                    <a ng-if="item.id === 1" ng-href="{{item.link}}" target="_blank"><i style="font-size: 30px; color: blue; margin: 5px 10px" class="fa-brands fa-facebook"></i></a>
                                    <a ng-if="item.id === 2" ng-href="{{item.link}}" target="_blank"><i style="font-size: 30px; color: violet; margin: 5px 10px" class="fa-brands fa-instagram"></i></a>
                                    <a ng-if="item.id === 3" ng-href="{{item.link}}" target="_blank"><i style="font-size: 30px; color: black; margin: 5px 10px" class="fa-brands fa-tiktok"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="ct2" style="margin-left: 20px; width: 75%;">
                        <div class="span-detail" style="width: 100%; align-items: center; text-align: center">
                            <div class="contentI2">

                                <div class="span-detail" style="display: flex">
                                    <p>Sinh viên:</p>
                                    <p style="margin-left: 5px" ng-bind-html="register.FullName"></p>
                                </div>
                                <div class="span-detail" style="display: flex">
