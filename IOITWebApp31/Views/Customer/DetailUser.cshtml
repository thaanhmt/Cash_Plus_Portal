                                            <a ng-if="item.id === 2" ng-href="{{item.link}}" target="_blank"><i style="font-size: 30px; color: violet; margin: 5px 10px" class="fa-brands fa-instagram"></i></a>
                                            <a ng-if="item.id === 3" ng-href="{{item.link}}" target="_blank"><i style="font-size: 30px; color: black; margin: 5px 10px" class="fa-brands fa-tiktok"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*Sửa share facebook zalo*@
                <div style="display:flex; justify-content: start; margin-top: 10px;">
                    @*<span style="font-size: 20px; color: white; background-color: #32517e; margin: 10px; padding: 6px; border-radius: 10px; cursor: pointer">
                    <i class="fa-regular fa-thumbs-up"></i> Like
                    </span>*@
                   
                    <div class="dp-flex">
                        <button class="btn-like" id="likeButton" ng-click="like()">
                            <img class="img-like" src="~/images/homecashplus//likefb-removebg-preview.png" alt="" />
                            <span class="text-like">Thích</span>
                            <span class="count_like" id="likeCount">0</span>
                        </button>
                    </div>
                   

                    <div id="fb-root"></div>
                    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v17.0" nonce="JLKJaKly"></script>

                    <div class="fb-share-button" data-href=`fbShare` id="share-button" data-layout="button_count" data-size="">
                        <a id="share-link" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fcashplus.vn%2Fchi-tiet%2F%3FStudentCode=" + register.StudentCode class="fb-xfbml-parse-ignore">
                            Chia sẻ
                        </a>
                    </div>
                </div>
                <div style="background-color: orange; width: 100%; padding:10px; text-align: left;margin-top:20px;">
                    <span style="margin-top: 20px; color: white;  font-size:16px;;">Bình luận({{message.length ? message.length : 0}})</span>
                </div>
                <div style="overflow-y: scroll; height: 300px;">
                    <div ng-repeat="item in message track by $index">
                        <div style=" display: flex; text-align: left; margin: 10px 20px;">
                            <img src="https://www.pngitem.com/pimgs/m/150-1503945_transparent-user-png-default-user-image-png-png.png" style="with: 50px; height: 50px; border-radius: 50%" />
                            <div style="width: 100%; margin-left: 15px;">
                                <div style="display: flex;">
                                    <p style="width: 50%; flex-wrap: wrap; font-weight: 600; margin-bottom: 0px !important;">
                                        {{item.Name}}
                                    </p>
                                    <p style="width: 50%; flex-wrap: wrap; text-align: right; font-weight: 300; margin-bottom: 0px !important">
                                        {{ formatDate(item.CreatedAt) }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="dp-comment">
                            <p style="display: inline-block; font-weight: 400;">
                                {{item.Contents}}
                            </p>
                        </div>
                    </div>
                </div>
                <form method="post" style=" margin-top: 30px">
                    <div style="margin-top: 30px; width: 100%">
                        <div style="background-color: #304f7f; padding: 10px">
                            <span style="font-size: 20px; color: white">Bình luận</span>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <input id="txtUsername_command" type="text" name="username_command" class="form-control" placeholder="Họ và tên" autocomplete="NOPE"
                                       spellcheck="false" ng-model="message.Name">
                            </div>
                            <div class="col-6">
                                <input id="txtEmail_command" type="text" name="email_command" class="form-control" placeholder="Email"
                                       autocomplete="NOPE" spellcheck="false" ng-model="message.Email">
                            </div>
                        </div>
                        <textarea class="form-control mt-3" id="exampleFormControlTextarea1" rows="4" cols="50" placeholder="Nhập bình luận"
                                  id="txtContent_command" name="content_command" style="width: 100%" ng-model="message.Contents"></textarea>
                        @* <textarea style="width: 100%; margin-top: 15px; border-color: #767676" id="txtContent_command" name="content_command" rows="4" cols="50" placeholder="Nhập bình luận"></textarea> *@
                        <br>
                        <div style="display: flex; justify-content: flex-end;">
                            <button class="btn btn-primary btn-cam" style="background-color: #ff7733; border: none" type="button" ng-click="addComment()">
                                <i class="fa-regular fa-paper-plane"></i> Gửi bình luận
                            </button>

                        </div>
                    </div>
                </form>

            </div>
