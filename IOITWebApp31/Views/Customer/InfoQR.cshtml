@model IOITWebApp31.Models.Data.CustomerLogin
@using IOITWebApp31.Models;
@{
    ViewData["Title"] = ViewBag.SeoTitle;
    Layout = "~/Views/Shared/_LayoutDK.cshtml";
}

<style>
    .image-qr-gen {
        display: none;
    }
    .a2a_full_footer {
        display: none;
    }
    .share-section {
        text-align: center; /* Căn giữa tiêu đề và nút chia sẻ */
        margin: 20px 0; /* Thêm khoảng cách trên và dưới tiêu đề */
    }

        .share-section h2 {
            font-size: 24px; /* Kích thước chữ tiêu đề */
            font-weight: bold; /* Làm chữ tiêu đề đậm */
            color: #333; /* Màu chữ tiêu đề */
            margin-bottom: 15px; /* Khoảng cách dưới tiêu đề */
        }

    /* Cải thiện kiểu dáng các nút chia sẻ */
    .a2a_kit {
        display: inline-block; /* Hiển thị các nút chia sẻ trên cùng một dòng */
        text-align: center; /* Căn giữa các nút chia sẻ */
    }

        .a2a_kit a {
            display: inline-block;
            width: 32px; /* Kích thước nút chia sẻ */
            height: 32px; /* Kích thước nút chia sẻ */
            margin: 0 5px; /* Khoảng cách giữa các nút */
            background-color: #f1f1f1; /* Màu nền của nút chia sẻ */
            border-radius: 50%; /* Đường viền tròn cho nút chia sẻ */
            line-height: 32px; /* Đặt chiều cao dòng để căn giữa biểu tượng */
            text-align: center; /* Căn giữa biểu tượng trong nút chia sẻ */
            color: #333; /* Màu chữ của nút chia sẻ */
            font-size: 18px; /* Kích thước biểu tượng chia sẻ */
            transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
        }

           
</style>

<main id="main" ng-controller="UserUnitController" ng-init="getQRInfo()">
    <div class="image-qr-gen">
        <img decoding="async" src="../images/homecashplus/CashPlus-banner-gioi-thieu-nguoi-dung.jpg" alt="Giới thiệu người dùng sử dụng nền tảng hoàn tiền tiêu dùng CashPlus">
    </div>
    <div id="content" class="content-area" style="display: block;">
        <section class="section-qr section-bg section-bgq" id="section_2138714338">
            <div class="section-content relative">
                <div class="row row-qr-page qr-box" id="row-1646774009">
                    <div id="col-1941587052" class="col row-qr-page-c1 small-12 large-12">
                        <div class="col-inner">
                            <div class="wapper-qr-page">
                                <div class="title-qr">CHÀO MỪNG BẠN ĐẾN VỚI NỀN TẢNG CASHPLUS - TIÊU THOẢI MÁI HOÀN TIỀN NGAY</div>
                                <div class="dang-ky-share">
                                    <a href="/dang-ky-cashplus/?sharecode={{QRInfo.share_code}}" class="btn btn-dangky" id="dk-share"><span>Đăng Ký Ngay !</span></a>
                                </div>
                                <div class="box-qr">
                                    <p>Tải CashPlus để nhận được tiền hoàn ngay lập tức về tài khoản ngân hàng khi đi tiêu dùng mọi thứ, mọi lúc, mọi nơi.</p>
                                    <p>Nhanh tay hoàn thành các bước sau để nhận được giải pháp tiêu dùng thông minh từ <strong>{{QRInfo.full_name}}</strong>:</p>
                                    <p class="qr-box-cacbuocdk">
                                        <ol>
                                            <li>1. Đăng ký tài khoản</li>
                                            <li>2. Tải ứng dụng CashPlus và đăng nhập</li>
                                            <li>3. Tìm sản phẩm / dịch vụ cần tiêu dùng</li>
                                            <li>4. Tiêu dùng trực tiếp và nhận được tiền hoàn ngay</li>
                                        </ol>
                                    </p>
                                    <p>(Mã giới thiệu: <strong>{{QRInfo.share_code}}</strong> hoặc gọi trực tiếp {{QRInfo.full_name}}, điện thoại: {{QRInfo.phone}} để được hỗ trợ bạn nhé!)</p>

                                </div>
                            </div>

                            <!-- Phần chia sẻ lên mạng xã hội -->
                            <!-- AddToAny BEGIN -->
                            <div class="share-section">
                                <h2>Chia sẻ:</h2>
                                <div class="a2a_kit a2a_kit_size_32 a2a_default_style" id="a2a-share-buttons">
                                    <a class="a2a_button_facebook"></a>
                                    <a class="a2a_button_twitter"></a>
                                    <a class="a2a_button_telegram"></a>
                                    <a class="a2a_button_copy_link"></a>
                                    <a class="a2a_button_google_gmail"></a>
                                    <a class="a2a_dd" href="https://www.addtoany.com/share" >

                                    </a>
                                </div>  
                                <script>
                                    var a2a_config = a2a_config || {};
                                    a2a_config.locale = "vi";
                                    var currentUrl = window.location.href;

                                    // Cập nhật thuộc tính data-a2a-url
                                    document.addEventListener('DOMContentLoaded', function () {
                                        var shareButtons = document.getElementById('a2a-share-buttons');
                                        if (shareButtons) {
                                            shareButtons.setAttribute('data-a2a-url', currentUrl);
                                        }
                                    });
                                </script>
                                <script async src="https://static.addtoany.com/menu/page.js"></script>
                            </div>
                            <!-- AddToAny END -->
                            <!-- Kết thúc phần chia sẻ lên mạng xã hội -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
