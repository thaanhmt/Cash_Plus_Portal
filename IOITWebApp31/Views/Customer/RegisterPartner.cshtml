                                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                            </ui-select-choices>
                                        </ui-select>
                                    </div>
                                    <div class="input-group col-sm-3 col-md-3">
                                        <ui-select ng-model="RegisterPartner.district_id" ng-change="changeValueDistrict($select.selected)" theme="select2" ng-disabled="disabled" title="{{ $select.selected.name }}">
                                            <ui-select-match allow-clear="true" placeholder="Quận/Huyện">{{ $select.selected.name }}</ui-select-match>
                                            <ui-select-choices repeat="item.id as item in District | filter: $select.search" position="down">
                                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                            </ui-select-choices>
                                        </ui-select>
                                    </div>
                                    <div class="input-group col-sm-3 col-md-3">
                                        <ui-select ng-model="RegisterPartner.ward_id" ng-change="changeValueWard($select.selected)" theme="select2" ng-disabled="disabled" title="{{ $select.selected.name }}">
                                            <ui-select-match allow-clear="true" placeholder="Phường/Xã">{{ $select.selected.name }}</ui-select-match>
                                            <ui-select-choices repeat="item.id as item in Ward | filter: $select.search" position="down">
                                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                            </ui-select-choices>
