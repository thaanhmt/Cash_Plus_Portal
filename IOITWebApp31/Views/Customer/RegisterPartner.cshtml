@model IOITWebApp31.Models.Data.CustomerLogin
@using IOITWebApp31.Models;
@{
    ViewData["Title"] = ViewBag.SeoTitle;
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<script>
    document.getElementById("dang-ky").innerHTML = '<a href="/dang-ky-doi-tac" class="btn-cntt style-btn-kn"><span>Đăng Ký Đối Tác</span></a>';

    var isWhiteDivVisible = false;
    var whiteDiv = document.getElementById("whiteDiv");
    function closeWhiteDiv() {
        if (whiteDiv.style.display = "block") {
            isWhiteDivVisible = false;
            whiteDiv.style.display = "none";
        }
        document.removeEventListener("click", handleDocumentClick);
    }

    function handleDocumentClick(event) {
        if (!whiteDiv.contains(event.target)) {
            closeWhiteDiv();
        }
    }
    function adjustLayout() {
        var moblie1 = document.getElementById('input-container-display-mobile1');
        var moblie2 = document.getElementById('input-container-display-mobile2');
        var pc = document.getElementById('input-container-display-pc');

        if (window.innerWidth <= 767) {
            moblie1.style.display = 'flex';
            moblie2.style.display = 'flex';
            pc.style.display = 'none';
        } else {
            moblie1.style.display = 'none';
            moblie2.style.display = 'none';
            pc.style.display = 'flex';
        }
    }

    // Ensure the function is called after the DOM is fully loaded
    document.addEventListener('DOMContentLoaded', function () {
        // Initial check
        adjustLayout();
        // Adjust layout on window resize
        window.addEventListener('resize', adjustLayout);
    });

</script>
<main id="main" ng-controller="UserUnitController" ng-init="getAddress()" onclick="closeWhiteDiv()">
