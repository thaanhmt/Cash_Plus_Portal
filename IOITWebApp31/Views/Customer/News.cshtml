@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<script>
    document.getElementById("dang-ky").innerHTML = '';
    var dangKyElement = document.querySelector("#dang-ky");
    dangKyElement.style.display = "none";
</script>
<main id="main" ng-controller="UserUnitController" ng-init="getchitietTinTucMoi()">
    <div id="content" class="content-area">
        <section class="section section-login-1">
            <div class="bg-section"></div>
            <div class="container">
                <div class="row s11_r3" style="display: none">
                    <div class="col col-md-12 col-12 s11_r3_c1">
                        <div class="col-inner">
                            <div class="image-countdown"><img src=~/images/cashplus/image905.png /></div>
                            <div id="countdown">
                                <ul>
                                    <li><span id="days"></span>Ngày</li>
                                    <li><span id="hours"></span>Giờ</li>
                                    <li><span id="minutes"></span>Phút</li>
                                    <li><span id="seconds"></span>Giây</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="say_hello">
                </div>
                <div>
                  @*  <span class="close" id="closeBtn3">&times;</span>*@
                    <h1 style="width: 100%;color:#111d7b;" class="content-layout title-news">{{TinTuc[0].Title}}</h1>
                    <div style="height:100%" ng-bind-html="TinTuc[0].Contents" class="content-layout ct-news"></div>
                </div>
            </div>
        </section>
        @*<section class="section section-login-2">
            <div class="bg-section"></div>
            <div class="container"></div>
        </section>*@
    </div>
</main>
