﻿@{
    Layout = "~/Views/Shared/_LayoutPure.cshtml";
}

<main>
    <!-- HERO SECTION -->
    <section class="download-hero">
        <div class="download-hero-left">
            <h1 class="download-title">Tải ứng dụng CashPlus ngay!</h1>
            <div class="download-desc">Hoàn tiền thật về tài khoản ngân hàng – Ưu đãi mỗi ngày – Thu nhập affiliate trọn đời!</div>
            <div class="download-cta-row">
                <a href="https://apps.apple.com/vn/app/cashplus/id6459993279?l=vi" class="download-btn" target="_blank" rel="noopener">
                    <i class="fab fa-apple"></i> App Store
                </a>
                <a href="https://play.google.com/store/apps/details?id=com.cashbackplus&hl=vi-VN" class="download-btn" target="_blank" rel="noopener">
                    <i class="fab fa-google-play"></i> Google Play
                </a>
            </div>
        </div>
        <div class="download-hero-right">
            <div class="sticker-badge">
                <i class="fa-solid fa-crown"></i> Số 1 hoàn tiền ngay
            </div>
            <img class="download-hero-img no-bg" src="/images/App-CashPlus-Download.png" alt="CashPlus App Hero">
        </div>
    </section>

    <!-- BENEFIT SECTION (dùng đúng class trang chủ) -->
    <section class="fintech-category-section">
        <h2 class="section-title-cashplus" data-aos="fade-up">Quyền lợi khi dùng CashPlus</h2>
        <div class="section-subtitle">Tận hưởng hoàn tiền, ưu đãi, bảo mật và thu nhập affiliate trọn đời.</div>
        <div class="fintech-category-cards">
            <div class="fintech-category-box has-bg-icon">
                <span class="category-bg-icon"><i class="fa-solid fa-coins"></i></span>
                <div class="category-title">Hoàn tiền trực tiếp</div>
                <div class="category-desc">Mỗi giao dịch đều nhận hoàn tiền thật về tài khoản ngân hàng.</div>
            </div>
            <div class="fintech-category-box has-bg-icon">
                <span class="category-bg-icon"><i class="fa-solid fa-shield-alt"></i></span>
                <div class="category-title">Bảo mật tuyệt đối</div>
                <div class="category-desc">Ứng dụng đạt chuẩn bảo mật ngân hàng, an toàn dữ liệu cá nhân.</div>
            </div>
            <div class="fintech-category-box has-bg-icon">
                <span class="category-bg-icon"><i class="fa-solid fa-gift"></i></span>
                <div class="category-title">Tất cả trong một</div>
                <div class="category-desc">F&B, thời trang, làm đẹp, du lịch, khách sạn,.. tất cả có trên CashPlus.</div>
            </div>
            <div class="fintech-category-box has-bg-icon">
                <span class="category-bg-icon"><i class="fa-solid fa-users"></i></span>
                <div class="category-title">Thu nhập affiliate</div>
                <div class="category-desc">Giới thiệu bạn bè, nhận hoa hồng trọn đời, không giới hạn.</div>
            </div>
        </div>
    </section>

    <!-- CTA SECTION (dùng đúng class trang chủ) -->
    <section class="cta-section fintech-cta-section">
        <div class="cta-content fintech-cta-content">
            <div class="cta-title">Sẵn sàng trải nghiệm CashPlus?</div>
            <div class="cta-description">Tải app ngay để nhận hoàn tiền, ưu đãi và thu nhập không giới hạn!</div>
            <a href="https://apps.apple.com/vn/app/cashplus/id6459993279?l=vi" class="cta-button fintech-btn-shadow" target="_blank" rel="noopener">
                <i class="fab fa-apple"></i> &nbsp; App Store
            </a>
            <a href="https://play.google.com/store/apps/details?id=com.cashbackplus&hl=vi-VN" class="cta-button fintech-btn-shadow" target="_blank" rel="noopener">
                <i class="fab fa-google-play"></i> &nbsp; Google Play
            </a>
        </div>
    </section>
</main>