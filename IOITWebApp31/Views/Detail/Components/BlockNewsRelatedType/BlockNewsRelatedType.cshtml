@model IEnumerable<IOITWebApp31.Models.EF.News>
@using IOITWebApp31.Models;

@if (Model != null)
{
    if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            if (item.Image != null){
                <div class="item-releated-post box">
                    <div class="box-image">
                        <a href="@("/" + item.Url)" class="d-block"><img class="image-cover" src="@(ViewBag.LinkSite)/uploads/@item.Image" alt="@item.Title"></a>
                    </div>
                    <div class="box-text">
                        <h5 class="post-title">
                            <a href="@("/" + item.Url)" class="textLine-2">@item.Title</a>
                        </h5>
                        <p class="description textLine-4">@(item.Description.Length > 300 ? item.Description.Substring(0, item.Description.Substring(0, 90).LastIndexOf(' ')) + "..." : item.Description)</p>
                    </div>
                </div>
            }else{
                <div class="item-releated-post box">
                    <div class="box-text">
                        <h5 class="post-title">
                            <a href="@("/" + item.Url)" class="textLine-2">@item.Title</a>
                        </h5>
                        <p class="description textLine-4">@(item.Description.Length > 300 ? item.Description.Substring(0, item.Description.Substring(0, 90).LastIndexOf(' ')) + "..." : item.Description)</p>
                    </div>
                </div>
            }
        }
    }
}