                                            <a href="#" class="d-block"><img src="./images/side-3.png" alt="featured image"></a>
                                        </div>
                                        <div class="item-side-4-1-3">
                                            <a href="#" class="d-block"><img src="./images/side-4.png" alt="featured image"></a>
                                        </div>
                                        <div class="item-side-4-1-3">
                                            <a href="#" class="d-block"><img src="./images/side-5.png" alt="featured image"></a>
                                        </div>
                                        <div class="item-side-4-1-3">
                                            <a href="#" class="d-block"><img src="./images/side-6.png" alt="featured image"></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="widget-category widget-category-4">
                                    <div class="block-9-2-3">
                                        <div class="lable-9-2-3">Quản lý ấn phẩm</div>
                                        <div class="list-anpham customize-scroll-bar">
                                            @*@await Component.InvokeAsync("BlockTCAPWidgetDetails", new { Number = 20 })*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
